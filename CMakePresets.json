      "hidden": true,
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CPP_STARTER_USE_SML": "ON",
        "CPP_STARTER_USE_BOOST_BEAST": "ON",
        "CPP_STARTER_USE_CROW": "ON"
      }
